{
  "name": "@sushiibot/sushii-data-client",
  "packageManager": "yarn@3.2.0",
  "version": "1.0.0",
  "main": "dist/lib.js",
  "types": "dist/lib.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "directory": "dist"
  },
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "test": "jest",
    "build": "tsc --skipLibCheck",
    "start": "ts-node src/index.ts | pino-pretty -c -t"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "node-fetch": "2.6.7",
    "pino": "^7.8.0"
  },
  "devDependencies": {
    "@sushiibot/sushii-data": "workspace:*",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.5.1",
    "pino-pretty": "^7.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
